{
  "name": "bloglist",
  "version": "1.0.0",
  "description": "blog list back-end app",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "lint": "eslint .",
    "test": "NODE_ENV=test jest --verbose --runInBand",
    "start:test": "NODE_ENV=test node index.js",
    "build:ui": "rm -rf build && cd ../bloglist-fe/ && yarn run build && cp -r build ../bloglist-be",
    "deploy": "git push heroku main",
    "deploy:full": "yarn run build:ui && git add . && git commit -m uibuild && git push && yarn run deploy",
    "logs:prod": "heroku logs --tail"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "author": "Vu Nguyen",
  "license": "MIT",
  "devDependencies": {
    "jest": "^27.1.0",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.6"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "eslint": "^8.1.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.0.4",
    "mongoose-unique-validator": "^3.0.0"
  }
}
